menu "Door Monitor Configuration"

    config DOOR_WIFI_SSID
        string "WiFi SSID"
        default "MyWiFiNetwork"
        help
            SSID (network name) for the door monitor to connect to.

    config DOOR_WIFI_PASSWORD
        string "WiFi Password"
        default "password123"
        help
            WiFi password (WPA or WPA2) for the door monitor to connect to.

    config DOOR_SERVER_IP
        string "Server IP Address"
        default "192.168.1.100"
        help
            IP address of the TCP server that will receive door status messages.

    config DOOR_SERVER_PORT
        int "Server Port"
        range 1024 65535
        default 8080
        help
            TCP port number of the server that will receive door status messages.

    config DOOR_NTFY_URL
        string "ntfy.sh Topic URL"
        default "https://ntfy.sh/your_unique_topic_here"
        help
            Full URL to your ntfy.sh topic for door notifications.
            Example: https://ntfy.sh/my_door_sensor_2024

    config DOOR_NTFY_PRIORITY
        choice DOOR_NTFY_PRIORITY_CHOICE
            prompt "Notification Priority"
            default DOOR_NTFY_PRIORITY_DEFAULT
            help
                Priority level for ntfy.sh notifications
        
            config DOOR_NTFY_PRIORITY_MIN
                bool "min"
            config DOOR_NTFY_PRIORITY_LOW
                bool "low" 
            config DOOR_NTFY_PRIORITY_DEFAULT
                bool "default"
            config DOOR_NTFY_PRIORITY_HIGH
                bool "high"
            config DOOR_NTFY_PRIORITY_MAX
                bool "max"
        endchoice

    config DOOR_NTFY_PRIORITY_VALUE
        string
        default "min" if DOOR_NTFY_PRIORITY_MIN
        default "low" if DOOR_NTFY_PRIORITY_LOW
        default "default" if DOOR_NTFY_PRIORITY_DEFAULT
        default "high" if DOOR_NTFY_PRIORITY_HIGH
        default "max" if DOOR_NTFY_PRIORITY_MAX

endmenu